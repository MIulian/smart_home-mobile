<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.BoardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/board_imageID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/board_nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/board_imageID"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board_nameID"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@id/board_imageID"
            android:textSize="18sp"
            android:text="DATA: "/>

        <TextView
            android:id="@+id/board_dateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board_nameID"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@id/dateID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/oraID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board_nameID"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@id/board_dateID"
            android:textSize="18sp"
            android:text="ORA: "/>

        <TextView
            android:id="@+id/board_hourID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board_nameID"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@id/oraID"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>