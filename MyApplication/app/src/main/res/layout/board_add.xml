<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.AddActivity">

    <TextView
        android:id="@+id/textNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="@string/board_name"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@id/textNameID"
        android:ems="10"
        android:hint="numele panoului"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/textSerialID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNameID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:text="@string/board_serial"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editSerialID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNameID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/textSerialID"
        android:ems="10"
        android:hint="x12345"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/textStartID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSerialID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="@string/board_start"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editStartID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSerialID"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textStartID"
        android:ems="10"
        android:hint="23:59:00"
        android:inputType="time" />

    <TextView
        android:id="@+id/textStartDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStartID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="@string/date_de_start"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editStartDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editStartID"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/textStartDateID"
        android:ems="10"
        android:hint="an-luna-ziua"
        android:inputType="datetime" />

    <TextView
        android:id="@+id/textRunTimeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStartDateID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="@string/timpul_de_functionare"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editRunTimeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editStartDateID"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textRunTimeID"
        android:ems="10"
        android:hint="numarul de minute"
        android:inputType="number" />

    <TextView
        android:id="@+id/textAutoStartID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRunTimeID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/board_autostart"
        android:textSize="30sp" />

    <Switch
        android:id="@+id/switchAutostartID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editRunTimeID"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/textAutoStartID"
        android:text="NU/DA" />

    <TextView
        android:id="@+id/textContorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAutoStartID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:text="@string/board_contor"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/editContorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchAutostartID"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@id/textContorID"
        android:ems="10"
        android:hint="2"
        android:inputType="number" />

    <TextView
        android:id="@+id/textOffID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textContorID"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:text="@string/board_off"
        android:textSize="30sp" />

    <Switch
        android:id="@+id/switchOffID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editContorID"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/textAutoStartID"
        android:text="OFF/ON" />

    <Button
        android:id="@+id/buttonSaveID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchOffID"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:text="@string/salveaza"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonBackID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchOffID"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:text="@string/inapoi"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textErrorID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSaveID"
        android:text=""
        android:textSize="28sp" />

</RelativeLayout>